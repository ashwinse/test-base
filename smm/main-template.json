{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location-1": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "location-2": {
            "type": "string",
            "defaultValue": "centralus"
        },
        "location-3": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "location-4": {
            "type": "string",
            "defaultValue": "eastus2"
        },
        "location-5": {
            "type": "string",
            "defaultValue": "southcentralus"
        },
        "signer_nodes_Count": {
            "type": "int",
            "defaultValue": 2
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "ashuser"
        },
        "adminPassword": {
            "type": "string",
            "defaultValue": "Ashpassword123"
        },
        "objectId": {
            "type": "string",
            "defaultValue": "fd6c1923-5ea7-4b77-ae32-eca1a5445f9a"
        },
        "VPNSharedKey": {
            "type": "string",
            "defaultValue": "Ashpassword123"
        }
    },
    "variables": {
        "baseUrl": "https://raw.githubusercontent.com/ashwinse/test-base/master/smm",
        "region-1-setupURL": "[concat(variables('baseUrl'),'/nested/region-1.json')]",
        "region-2-setupURL": "[concat(variables('baseUrl'),'/nested/region-2.json')]",
        "region-3-setupURL": "[concat(variables('baseUrl'),'/nested/region-3.json')]",
        "region-4-setupURL": "[concat(variables('baseUrl'),'/nested/region-4.json')]",
        "region-5-setupURL": "[concat(variables('baseUrl'),'/nested/region-5.json')]",
        "gatewayNameReg1": "Chain-reg1-gateway",
        "gatewayNameReg2": "Chain-reg2-gateway",
        "gatewayNameReg3": "Chain-reg3-gateway",
        "gatewayNameReg4": "Chain-reg4-gateway",
        "gatewayNameReg5": "Chain-reg5-gateway"
    },
    "resources": [
        {
            "name": "region-1-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-1-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "objectId": {
                        "value": "[parameters('objectId')]"
                    },
                    "location": {
                        "value": "[parameters('location-1')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "gatewayName": {
                        "value": "[variables('gatewayNameReg1')]"
                    }
                }
            }
        },
        {
            "name": "region-2-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-2-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location-2')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "gatewayName": {
                        "value": "[variables('gatewayNameReg2')]"
                    }
                }
            }
        },
        {
            "name": "region-3-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-3-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location-3')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "gatewayName": {
                        "value": "[variables('gatewayNameReg3')]"
                    }
                }
            }
        },
        {
            "name": "region-4-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-4-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location-4')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "gatewayName": {
                        "value": "[variables('gatewayNameReg4')]"
                    }
                }
            }
        },
        {
            "name": "region-5-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-5-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location-5')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "gatewayName": {
                        "value": "[variables('gatewayNameReg5')]"
                    }
                }
            }
        },
        {
            "name": "reg1-to-reg2",
            "type": "Microsoft.Network/connections",
            "apiVersion": "2016-03-30",
            "dependsOn": [
                "region-1-setup",
                "region-2-setup",
                "region-3-setup",
                "region-4-setup",
                "region-5-setup"
            ],
            "location": "[parameters('location-1')]",
            "properties": {
                "publicIPAllocationMethod":"Dynamic",
                "virtualNetworkGateway1": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', variables('gatewayNameReg1'))]"
                },
                "virtualNetworkGateway2": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', variables('gatewayNameReg2'))]"
                },
                "connectionType": "Vnet2Vnet",
                "sharedKey": "[parameters('VPNSharedKey')]"
            }
        },
        {
            "name": "reg2-to-reg1",
            "type": "Microsoft.Network/connections",
            "apiVersion": "2016-03-30",
            "dependsOn": [
                "Microsoft.Network/connections/reg1-to-reg2"
