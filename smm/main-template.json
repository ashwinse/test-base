{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location-1":{
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "location-2":{
            "type": "string",
            "defaultValue": "centralus"
        },
        "location-3":{
            "type": "string",
            "defaultValue": "eastus"
        },
        "location-4":{
            "type": "string",
            "defaultValue": "eastus2"
        },
        "location-5":{
            "type": "string",
            "defaultValue": "southcentralus"
        },
        "signer_nodes_Count": {
            "type": "string",
            "defaultValue": 2
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "ashuser"
        },
        "adminPassword": {
            "type": "string",
            "defaultValue": "Ashpassword123"
        }
    },
    "variables": {
        "baseUrl":"https://raw.githubusercontent.com/ashwinse/test-base/master/smm",
        "region-1-setupURL": "[concat(variables('baseUrl'),'/nested/region-1.json')]",
        "region-2-setupURL": "[concat(variables('baseUrl'),'/nested/region-2.json')]",
        "region-3-setupURL": "[concat(variables('baseUrl'),'/nested/region-3.json')]",
        "region-4-setupURL": "[concat(variables('baseUrl'),'/nested/region-4.json')]",
        "region-5-setupURL": "[concat(variables('baseUrl'),'/nested/region-5.json')]"
    },
    "resources": [
        {
            "name": "region-1-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-1-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value":"[parameters('location-1')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "name": "region-2-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-2-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value":"[parameters('location-2')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "name": "region-3-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-3-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value":"[parameters('location-3')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "name": "region-4-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-4-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value":"[parameters('location-4')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "name": "region-5-setup",
            "apiVersion": "2016-02-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('region-5-setupURL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value":"[parameters('location-5')]"
                    },
                    "signer_nodes_Count": {
                        "value": "[parameters('signer_nodes_Count')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        }
    ]
}