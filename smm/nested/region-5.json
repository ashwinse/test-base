{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "signer_nodes_Count": {
            "type": "int",
            "defaultValue": 2
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "ashuser"
        },
        "adminPassword": {
            "type": "string",
            "defaultValue": "Ashpassword123"
        },
        "gatewayName": {
            "type": "string"
        }
    },
    "variables": {
        "prefix": "Chain-reg5",
        "suffix": "[substring(uniqueString(resourceGroup().id) ,0, 5)]",
        "availabilitySetsName": "[concat(variables('prefix'),'-avset')]",
        "virtualNetworksName": "[concat(variables('prefix'),'-vnet')]",
        "chainSignerVMIpName": "[concat(variables('prefix'),'-signer-pip')]",
        "chainSignerNicName": "[concat(variables('prefix'),'-signer-nic')]",
        "chainSignerNsgName": "[concat(variables('prefix'),'-signer-nsg')]",
        "chainSignerVmName": "[concat(variables('prefix'),'-signer-vm')]",
        "signerSubnetName": "signer-reg5-subnet",
        "gatewayIpName": "[concat(variables('prefix'),'-gateway-pip')]",
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('virtualNetworksName'))]",
        "gatewaySubnetID": "[concat(variables('vnetID'),'/subnets/GatewaySubnet')]",
        "gatewayPipID": "[resourceId('Microsoft.Network/publicIPAddresses', variables('gatewayIpName'))]",
        "gatewayIpConfig": "[concat(variables('prefix'),'-gateway-ipconfig')]",
        "signerScript1Url": "",
        "signerScript1FileName": "",
        "signerScriptUrl2": "",
        "signerScript2FileName": ""
    },
    "resources": [
        {
            "type": "Microsoft.Compute/availabilitySets",
            "sku": {
                "name": "Aligned"
            },
            "name": "[variables('availabilitySetsName')]",
            "apiVersion": "2016-04-30-preview",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "platformUpdateDomainCount": 5,
                "platformFaultDomainCount": 2,
                "virtualMachines": []
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(variables('chainSignerVmName'),'-',copyIndex(1))]",
            "apiVersion": "2016-04-30-preview",
            "location": "[parameters('location')]",
            "copy": {
                "name": "signerLoop",
                "count": "[parameters('signer_nodes_Count')]"
            },
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets',variables('availabilitySetsName'))]"
                },
                "hardwareProfile": {
                    "vmSize": "Standard_D1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "16.04-LTS",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(variables('chainSignerVmName'),'-',copyIndex(1),'-',variables('prefix'),'-osDisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        },
                        "diskSizeGB": 30
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[concat(variables('chainSignerVmName'),'-',copyIndex(1))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    },
                    "secrets": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('chainSignerNicName'),'-',copyIndex(1)))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('chainSignerNicName'),'-',copyIndex(1)))]"
            ],
            "resources": [
                {
                    "type": "extensions",
                    "name": "DockerExtension",
                    "apiVersion": "2015-05-01-preview",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', variables('chainSignerVmName'),'-',copyIndex(1))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "DockerExtension",
                        "typeHandlerVersion": "1.1",
                        "autoUpgradeMinorVersion": true,
                        "settings": {},
                        "protectedSettings": {}
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(variables('chainSignerNicName'),'-',copyIndex(1))]",
            "apiVersion": "2016-03-30",
            "location": "[parameters('location')]",
            "copy": {
                "name": "signerLoop",
                "count": "[parameters('signer_nodes_Count')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('chainSignerVMIpName'),'-',copyIndex(1)))]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworksName')), '/subnets/',variables('signerSubnetName'))]"
                            }
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('chainSignerNsgName'))]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('chainSignerVMIpName'),'-',copyIndex(1)))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworksName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('chainSignerNsgName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('chainSignerNsgName')]",
            "apiVersion": "2016-03-30",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "container-1",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "1999",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1001,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "default-allow-ssh",
                        "properties": {
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "HTTP",
                        "properties": {
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "80",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1011,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "HTTPS",
                        "properties": {
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1021,
                            "direction": "Inbound"
                        }
                    }
                ]
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat(variables('chainSignerVMIpName'),'-',copyIndex(1))]",
            "apiVersion": "2016-03-30",
            "location": "[parameters('location')]",
            "copy": {
                "name": "signerLoop",
                "count": "[parameters('signer_nodes_Count')]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('virtualNetworksName')]",
            "apiVersion": "2016-03-30",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.5.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('signerSubnetName')]",
                        "properties": {
                            "addressPrefix": "10.5.1.0/24"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "10.5.20.0/24"
                        }
                    }
                ]
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('gatewayIpName')]",
            "apiVersion": "2016-03-30",
            "location": "[parameters('location')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            },
            "dependsOn": []
        },
        {
            "name": "[parameters('gatewayName')]",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2016-09-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworksName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('gatewayIpName'))]"
            ],
            "properties": {
                "gatewayType": "Vpn",
                "vpnType": "RouteBased",
                "ipConfigurations": [
                    {
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('gatewaySubnetID')]"
                            },
                            "publicIPAddress": {
                                "id": "[variables('gatewayPipID')]"
                            }
                        },
                        "name": "[variables('gatewayIpConfig')]"
                    }
                ],
                "sku": {
                    "name": "Standard",
                    "tier": "Standard"
                }
            }
        }
    ]
}